[Unit]
Description=Ethereum smart contracts network client daemon - Parity
After=network.target

[Service]
User={{ parity_user }}
Group={{ parity_group }}

Type=simple
ExecStart={{ parity_dst_bindir }}/parity {{ parity_extra_args }}

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
